<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="pantallas.Dashboard"
    BackgroundColor="#1E1E1E"
    Padding="20">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- BARRA SUPERIOR -->
        <Grid Grid.Row="0" Padding="20,0" ColumnDefinitions="Auto,*">
            <ImageButton Source="backarrow.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         VerticalOptions="Center"
                         Grid.Column="0"/>
            <Label Text="Dashboard"
                   Margin="20,0,0,0"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#800080"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Grid.Column="1" />
        </Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20">

                <!-- SALUDO AL USUARIO -->
                <Label x:Name="LabelBienvenida"
                       Text="Hola, usuario"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10"/>

                <!-- RESUMEN DE PROGRESO -->
                <Frame BackgroundColor="#EEEEEE"
                       CornerRadius="10"
                       Padding="10"
                       HorizontalOptions="FillAndExpand"
                       Margin="0,10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Resumen de Progreso"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#444444" />
                        <BoxView HeightRequest="1" Color="Black" Margin="0,5"/>
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                            <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Center">
                                <Image Source="semana.png" HeightRequest="80" Aspect="AspectFit"/>
                                <Label Text="Llevas el 60% de tus rutinas semanales" TextColor="#444444" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Center">
                                <Image Source="mes.png" HeightRequest="80" Aspect="AspectFit"/>
                                <Label Text="Llevas el 75% de tu objetivo mensual de rutinas completado" TextColor="#444444" />
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- ENTRENAMIENTO -->
                <Frame BackgroundColor="#EEEEEE"
                       CornerRadius="10"
                       Padding="10"
                       HorizontalOptions="FillAndExpand"
                       Margin="0,10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Entrenamiento"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#444444" />
                        <BoxView HeightRequest="1" Color="Black" Margin="0,5"/>
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                            <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Center">
                                <Image Source="pecho.png" HeightRequest="80" Aspect="AspectFit"/>
                                <Label Text="Hoy toca rutina de pecho" TextColor="#444444" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Center">
                                <Frame CornerRadius="40" BorderColor="Transparent" HeightRequest="80" WidthRequest="80" Padding="0">
                                    <Image Source="vladi.jpg" Aspect="AspectFill"/>
                                </Frame>
                                <Label Text="Héctor Morales" FontAttributes="Bold" TextColor="#444444" HorizontalOptions="Center"/>
                                <Label Text="Estoy atento por si tienes dudas · 8h" TextColor="#444444"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                                <Button Text="Completar tarea"
                                        BackgroundColor="#FF6B3D"
                                        TextColor="White"
                                        CornerRadius="5"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- DIETA -->
                <Frame BackgroundColor="#EEEEEE"
                       CornerRadius="10"
                       Padding="10"
                       HorizontalOptions="FillAndExpand"
                       Margin="0,10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Dieta"
                               FontAttributes="Bold"
                               FontSize="18"
                               TextColor="#444444" />
                        <BoxView HeightRequest="1" Color="Black" Margin="0,5"/>
                        <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                            <VerticalStackLayout Grid.Column="0" Spacing="5" HorizontalOptions="Center">
                                <Image Source="dieta.jpg" HeightRequest="80" Aspect="AspectFit"/>
                                <Label Text="Dieta de volumen" TextColor="#444444" />
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="1" Spacing="5" HorizontalOptions="Center">
                                <Frame CornerRadius="40" BorderColor="Transparent" HeightRequest="80" WidthRequest="80" Padding="0">
                                    <Image Source="nutriologa.jpg" Aspect="AspectFill"/>
                                </Frame>
                                <Label Text="Nutrióloga" FontAttributes="Bold" TextColor="#444444"/>
                                <Label Text="Lic. Maria Estefania Juarez Aramburu" TextColor="#444444"/>
                            </VerticalStackLayout>
                            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                                <Button Text="Editar dieta"
                                        BackgroundColor="#FF6B3D"
                                        TextColor="White"
                                        CornerRadius="5"/>
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- BARRA DE NAVEGACIÓN -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*,*"
              Padding="10"
              BackgroundColor="#2E2E2E"
              HorizontalOptions="FillAndExpand">
            <Button x:Name="BtnDashboard" Grid.Column="0" Text="Dashboard" Clicked="OnDashboardClicked" TextColor="White"/>
            <Button x:Name="BtnEntrenamiento" Grid.Column="1" Text="Entrenamiento" Clicked="OnEntrenamientoClicked" TextColor="White"/>
            <Button x:Name="BtnNutricion" Grid.Column="2" Text="Nutrición" Clicked="OnNutricionClicked" TextColor="White"/>
            <Button x:Name="BtnChat" Grid.Column="3" Text="Chat" Clicked="OnChatClicked" TextColor="White"/>
        </Grid>
    </Grid>
</ContentPage>
