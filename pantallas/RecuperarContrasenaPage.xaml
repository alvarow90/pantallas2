<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pantallas.RecuperarContrasenaPage"
             Title="Recuperar contraseña"
             BackgroundColor="White"
             Padding="30">

    <VerticalStackLayout Spacing="20" VerticalOptions="Center">

        <Label Text="Recuperar contraseña" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Label Text="Ingresa tu correo electrónico registrado y te enviaremos instrucciones para recuperar tu contraseña." 
               FontSize="14" TextColor="Gray" />

        <Entry x:Name="EmailRecoveryEntry" Placeholder="Correo electrónico" Keyboard="Email" />

        <Button Text="Enviar instrucciones" Clicked="OnEnviarClicked" BackgroundColor="#800080" TextColor="White" />

        <Label x:Name="RecoveryMessageLabel" FontAttributes="Bold" TextColor="Green" HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
